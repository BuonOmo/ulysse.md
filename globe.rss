		</item>
		
		<item>
			<title>Bus de luxe</title>
			<pubDate>Fri, 20 Oct 2023 06:32:05 +0000</pubDate>
			<link>{{ site.url }}/globe#20231020__bus_de_luxe</link>
			<guid>{{ site.url }}/globe#20231020__bus_de_luxe</guid>

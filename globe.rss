		</item>
		
		<item>
			<title>Reprise du stop</title>
			<pubDate>Mon, 23 Oct 2023 16:21:40 +0000</pubDate>
			<link>{{ site.url }}/globe#20231021__reprise_du_stop</link>
			<guid>{{ site.url }}/globe#20231021__reprise_du_stop</guid>
			<description>&lt;p&gt;Et pour changer, j'ai été pris par un bus de voyageurs deux étages...&lt;/p&gt;</description>
		</item>
		
		<item>
			<title>Ceviche</title>
			<pubDate>Mon, 23 Oct 2023 16:21:38 +0000</pubDate>
			<link>{{ site.url }}/globe#20231020__ceviche</link>
			<guid>{{ site.url }}/globe#20231020__ceviche</guid>
			<description>&lt;p&gt;Je ne savais pas que c'était péruvien, maintenant j'en ai la preuve par l'estomac !&lt;/p&gt;</description>
		</item>
		
		<item>
			<title>Immigration express</title>
			<pubDate>Fri, 20 Oct 2023 07:22:26 +0000</pubDate>
			<link>{{ site.url }}/globe#20231020__immigration_express</link>
			<guid>{{ site.url }}/globe#20231020__immigration_express</guid>
